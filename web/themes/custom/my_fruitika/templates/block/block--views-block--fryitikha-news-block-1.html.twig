					{{ row }}
				</div>
				{% endfor %}				
			</div>
			<div class="row">
				<div class="col-lg-12 text-center">
					<a href="news" class="boxed-btn">More News</a>
				</div>
			</div> 
		</div>
	</div>
	<!-- end latest news -->
    {% endblock %}